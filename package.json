{
  "name": "reolink-nvr-api",
  "version": "0.3.0",
  "description": "TypeScript SDK and CLI for Reolink NVR/Camera HTTP API - Control PTZ, snapshots, streams, playback, AI detection, and more",
  "type": "module",
  "main": "./dist/reolink.js",
  "types": "./dist/reolink.d.ts",
  "exports": {
    ".": {
      "types": "./dist/reolink.d.ts",
      "import": "./dist/reolink.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./stream": {
      "types": "./dist/stream.d.ts",
      "import": "./dist/stream.js"
    },
    "./record": {
      "types": "./dist/record.d.ts",
      "import": "./dist/record.js"
    },
    "./ptz": {
      "types": "./dist/ptz.d.ts",
      "import": "./dist/ptz.js"
    },
    "./ai": {
      "types": "./dist/ai.d.ts",
      "import": "./dist/ai.js"
    },
    "./alarm": {
      "types": "./dist/alarm.d.ts",
      "import": "./dist/alarm.js"
    },
    "./events": {
      "types": "./dist/events.d.ts",
      "import": "./dist/events.js"
    },
    "./snapshot": {
      "types": "./dist/snapshot.d.ts",
      "import": "./dist/snapshot.js"
    },
    "./playback": {
      "types": "./dist/playback.d.ts",
      "import": "./dist/playback.js"
    },
    "./endpoints/system": {
      "types": "./dist/endpoints/system.d.ts",
      "import": "./dist/endpoints/system.js"
    }
  },
  "bin": {
    "reolink": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:clean": "rm -rf dist && npm run build",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "node dist/cli.js",
    "cli": "npm run build && npm run start",
    "prepublishOnly": "npm run build:clean"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "USAGE.md"
  ],
  "keywords": [
    "reolink",
    "nvr",
    "camera",
    "api",
    "ptz",
    "security-camera",
    "surveillance",
    "cctv",
    "ip-camera",
    "rtsp",
    "snapshot",
    "playback",
    "typescript",
    "sdk",
    "cli"
  ],
  "author": "Jonathan Verhees <jonathan@verhees.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verheesj/reolink-api.git"
  },
  "bugs": {
    "url": "https://github.com/verheesj/reolink-api/issues"
  },
  "homepage": "https://github.com/verheesj/reolink-api#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "undici": "^7.16.0"
  }
}
